Adafruit_SSD1306 display(0);

 
void setup()   {
  Serial.begin(9600);
 
  // by default, we'll generate the high voltage from the 3.3v line internally! (neat!)
  display.begin(SSD1306_SWITCHCAPVCC, I2CADDR);
  // init done
  // Clear the buffer.
  display.clearDisplay();
}
 
 
void loop() {
  display.clearDisplay();

  displayBitmap(); 
  delay(2000);
  display.clearDisplay();
  displayText();
  delay(2000);
}

void displayText(){
  display.setRotation(0);
  display.setTextSize(1);
  display.setTextColor(WHITE);
  display.setCursor(2,10); // X ; Y start
  display.println("LaskaKit");
  display.println("by Makers");
  display.print("for Makers");
  display.display();
}

void displayBitmap(){

  display.setRotation(0);
  display.drawBitmap(8, 0, laskakit_glcd_bmp, 48, 48, 1);
  display.display();
}
